<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pregamescreen"
    tools:context="com.example.myfirstapp.Pregame">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout

        android:id="@+id/STATUSBAR"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/leeds"
            android:background="#060B10"


            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="#060B10"
            android:text="CLUB NAME"
            android:textAlignment="center"
            android:textColor="#FED837"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#060B10"
            android:text="XP"
            android:textAlignment="center"
            android:textColor="#FED837"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#060B10"
            android:text="COINS"
            android:textAlignment="center"
            android:textColor="#FED837"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/gotomatchsimulatorfirsthalf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PLAY MATCH"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#060B10"
            android:background="@drawable/yellowbutton_background"/>
        <Button
            android:id="@+id/gotoseasonsfromprematch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#060B10"
            android:background="@drawable/yellowbutton_background">
    </Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ratingandchem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rating: 73                             Chemistry:86"
            android:textColor="#A9C9E4"
            android:background="#B3060B10"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="120dp"/>


        <TextView
            android:layout_below="@id/ratingandchem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/substitutes"
            android:textColor="#A9C9E4"
            android:background="#B3060B10"
            android:text="STARTING XI\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\"
            android:gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            />

    <TextView
        android:id="@+id/substitutes"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="SUBSTITUTES"
        android:gravity="center|top"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
       android:layout_alignParentBottom="true"
        android:textColor="#A9C9E4"
        android:background="#B3060B10">
    </TextView>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
