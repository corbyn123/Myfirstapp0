<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3A3C"
    tools:context="com.example.myfirstapp.Settings">



    <LinearLayout

        android:id="@+id/STATUSBAR"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/leeds"
            android:background="#2A2D32"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="#2A2D32"
            android:text="CLUB NAME"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#2A2D32"
            android:text="XP"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#2A2D32"
            android:text="COINS"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/STATUSBAR">

        <Button
            android:id="@+id/changehalflength"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="110dp"
            android:layout_weight="1"
            android:backgroundTint="#2A2D32"
            android:text="Change half length"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/changeseasonlength"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_weight="1"
            android:backgroundTint="#C0921A"
            android:text="Change season length"
            android:textColor="#2A2D32"
            android:textSize="16sp" />

        <Button
            android:id="@+id/changebackground"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_weight="1"
            android:backgroundTint="#2A2D32"
            android:text="Change background"
            android:textColor="#C0921A"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/notificationsettings"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#C0921A"
            android:text="notification settings"
            android:textColor="#2A2D32"
            android:textSize="20sp" />

        <Button

            android:id="@+id/backtohomefromsettings"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:backgroundTint="#2A2D32"
            android:text="back"
            android:textColor="#C0921A"
            android:textSize="25sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
