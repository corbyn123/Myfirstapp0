<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.Rewards">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="8dp"
        android:background="#D9D2BB6F"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/rewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REWARDS"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:textSize="50sp"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/coinstoast"
            android:src="@drawable/coins"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/rewards"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="50dp"
            />
        <ImageView
            android:id="@+id/trophytoast"
            android:src="@drawable/trophyreal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/coinstoast"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="48dp"
            />

        <TextView
            android:id="@+id/XPpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  XP"
            android:textSize="50sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_below="@id/trophytoast"
            android:layout_marginLeft="48dp"


            />
        <TextView
            android:id="@+id/xptotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450"
            android:textSize="50sp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/XPpoints"
            android:layout_marginRight="48dp"
            />
        <ImageView
            android:id="@+id/trophywin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/goldtrophy"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/trophytoast"
            android:layout_marginRight="48dp"
            />

        <TextView
            android:id="@+id/coinstotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700"
            android:textSize="45sp"
            android:layout_alignBottom="@+id/coinstoast"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/PLAYNEXTMATCHfromrewards"
            android:layout_width="100dp"
            android:text="PLAY NEXT MATCH"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:background="#2A2D32"
            android:textColor="#C0921A"/>
        <Button
            android:id="@+id/homefromrewards"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:background="#2A2D32"
            android:textColor="#C0921A"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
