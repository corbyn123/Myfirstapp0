<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.settings$seasonlengthFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp">

        <Button
            android:id="@+id/tengameseason"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/blackbutton_background"
            android:textColor="#A9C9E4"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:text="10 GAMES"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/fifteengameseason"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/blackbutton_background"
            android:textColor="#A9C9E4"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:text="15 GAMES"
            android:textSize="40sp"/>

    </LinearLayout>


</FrameLayout>
