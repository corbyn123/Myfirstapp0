<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stadium"
    tools:context="com.example.myfirstapp.Season">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



    <LinearLayout

        android:id="@+id/STATUSBAR"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/leeds"


            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#2A2D32"
            android:text="CLUB NAME"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#2A2D32"
            android:text="XP"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#2A2D32"
            android:text="DIV"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/PLAYMATCHSEASONS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="90dp"
            android:layout_weight="4"
            android:backgroundTint="#B3C0921A"
            android:text="PLAY MATCH"
            android:textColor="#2A2D32"
            android:textSize="25sp"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="90dp"
            android:layout_weight="2"
            android:backgroundTint="#B32A2D32"
            android:text="STATS"
            android:textColor="#C0921A"
            android:textSize="13sp" />

        <Button
            android:id="@+id/backtohome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="90dp"
            android:layout_weight="2"
            android:backgroundTint="#B32A2D32"
            android:text="BACK"
            android:textColor="#C0921A"
            android:textSize="13sp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="230dp"
            android:background="#9C2A2D32"
            android:text="Division:8"
            android:textColor="#C0921A"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="15dp"
            android:background="#9C2A2D32"
            android:text="Record: 3-3-1 (W-D-L)"
            android:textColor="#C0921A"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="15dp"
            android:background="#9C2A2D32"
            android:text="Projected: Promotion"
            android:textColor="#C0921A"
            android:textSize="18sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="15dp"
            android:background="#9C2A2D32"
            android:text="Games Remaining:3"
            android:textColor="#C0921A"
            android:textSize="18sp"></TextView>

        <Button
            android:id="@+id/buypacksseasons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96dp"
            android:layout_marginRight="96dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#B3C0921A"
            android:text="BUY PACKS"
            android:textColor="#2A2D32" />


    </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/progressbar"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
