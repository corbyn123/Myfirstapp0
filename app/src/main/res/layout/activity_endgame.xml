<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upsetplayer"
    tools:context="com.example.myfirstapp.Endgame">

    <LinearLayout

        android:id="@+id/STATUSBAR"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/leeds"
            android:background="#2A2D32"


            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="#2A2D32"
            android:text="CLUB NAME"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#2A2D32"
            android:text="XP"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#2A2D32"
            android:text="COINS"
            android:textAlignment="center"
            android:textColor="#C0921A"
            android:textSize="20sp" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/playerteam"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginLeft="55dp"
                android:layout_weight="1"
                android:src="@drawable/leeds" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0  "
                android:textColor="#C0921A"
                android:textSize="45sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textColor="#C0921A"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="  3"
                android:textColor="#C0921A"
                android:textSize="45sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:src="@drawable/manutd" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/buypacksfromendgame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BUY PACKS"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:textColor="#C0921A"
            android:background="#2A2D32"

            />
        <Button
            android:id="@+id/homefromendgame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textSize="25dp"
            android:layout_above="@id/buypacksfromendgame"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="#C0921A"
            android:background="#2A2D32"
            />

        <Button
            android:id="@+id/seasonsfromendgame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PLAY NEXT MATCH"
            android:textSize="25dp"
            android:layout_above="@id/homefromendgame"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="#C0921A"
            android:background="#2A2D32"></Button>





    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
