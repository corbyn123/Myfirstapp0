<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name=".MainActivity"
    android:label="@string/app_name"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/greatbackground"
    tools:context="com.example.myfirstapp.MainActivity">



    <LinearLayout

        android:id="@+id/STATUSBAR"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/leeds"
            android:background="#060B10"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="#060B10"
            android:text="CLUB NAME"
            android:textAlignment="center"
            android:textColor="#FED837"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#060B10"
            android:text="XP"
            android:textAlignment="center"
            android:textColor="#FED837"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#060B10"
            android:text="COINS"
            android:textAlignment="center"
            android:textColor="#FED837"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/STATUSBAR">

        <Button
            android:id="@+id/PLAY"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="110dp"
            android:layout_weight="2"
            android:background="@drawable/blackbutton_background"
            android:text="PLAY"
            android:textStyle="bold"
            android:textColor="#A9C9E4"
            android:textSize="60sp" />

        <Button
            android:id="@+id/BUYPACKS"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/yellowbutton_background"
            android:text="BUY PACKS"
            android:textColor="#060B10"
            android:textSize="28sp" />

        <Button
            android:id="@+id/MYCLUB"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_weight="1"
            android:background="@drawable/blackbutton_background"
            android:text="MY CLUB"
            android:textStyle="bold"
            android:textColor="#A9C9E4"
            android:textSize="28sp"
            />

        <Button
            android:id="@+id/TROPHIES"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/yellowbutton_background"
            android:text="TROPHIES"
            android:textColor="#060B10"
            android:textSize="28sp" />

        <Button

            android:id="@+id/SETTINGS"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/blackbutton_background"
            android:text="SETTINGS"
            android:textColor="#A9C9E4"
            android:textSize="28sp" />

    </LinearLayout>


    </android.support.constraint.ConstraintLayout>
